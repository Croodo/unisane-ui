{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "concurrency": "50",
  "tasks": {
    "codegen": {
      "dependsOn": ["^build"],
      "inputs": ["src/contracts/**/*.contract.ts", "devtools.config.ts"],
      "outputs": ["src/app/api/**/route.ts", "src/sdk/**/*.ts"],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build", "codegen"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types", "codegen"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  }
}
