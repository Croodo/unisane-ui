{
  "name": "@unisane/data-table",
  "version": "0.1.0",
  "description": "High-performance, feature-rich DataTable component for Unisane UI",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/types/*.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    },
    "./hooks/data": {
      "types": "./dist/hooks/data/index.d.ts",
      "import": "./dist/hooks/data/index.js"
    },
    "./hooks/ui": {
      "types": "./dist/hooks/ui/index.d.ts",
      "import": "./dist/hooks/ui/index.js"
    },
    "./hooks/features": {
      "types": "./dist/hooks/features/index.d.ts",
      "import": "./dist/hooks/features/index.js"
    },
    "./hooks/utilities": {
      "types": "./dist/hooks/utilities/index.d.ts",
      "import": "./dist/hooks/utilities/index.js"
    },
    "./constants": {
      "types": "./dist/constants/index.d.ts",
      "import": "./dist/constants/index.js"
    },
    "./errors": {
      "types": "./dist/errors/index.d.ts",
      "import": "./dist/errors/index.js"
    },
    "./context": {
      "types": "./dist/context/index.d.ts",
      "import": "./dist/context/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "check-types": "tsc --noEmit",
    "dev": "tsc --watch",
    "lint": "eslint src --max-warnings 0",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "@unisane/ui": "workspace:*",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@unisane/eslint-config": "workspace:*",
    "@unisane/typescript-config": "workspace:*",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.1",
    "happy-dom": "^20.0.11",
    "tsc-alias": "^1.8.10",
    "typescript": "5.9.2",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.13",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "xlsx": "^0.18.5"
  }
}
