{
  "extends": "../typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@data-table/*": ["src/*"]
    },
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "src/__tests__", "**/*.test.ts", "**/*.test.tsx"]
}
