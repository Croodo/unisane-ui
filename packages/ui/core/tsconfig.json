{
  "extends": "../../tooling/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["src/*"]
    },
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "build", "node_modules", "registry"]
}