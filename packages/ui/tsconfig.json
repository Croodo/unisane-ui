{
  "extends": "@unisane/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": [
        "src/*"
      ]
    },
    "module": "ESNext",
    "moduleResolution": "Bundler"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}