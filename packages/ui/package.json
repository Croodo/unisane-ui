{
  "name": "@unisane/ui",
  "version": "0.0.0",
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./styles.css": "./dist/index.css",
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "default": "./dist/*.js"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm build:components && pnpm build:styles",
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "build:components": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint src --max-warnings 0"
  },
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@unisane/tokens": "workspace:*",
    "@unisane/eslint-config": "workspace:*",
    "@unisane/tailwind-config": "workspace:*",
    "@unisane/typescript-config": "workspace:*",
    "eslint": "^9.39.1",
    "tailwindcss": "^4.1.16",
    "tsc-alias": "^1.8.10",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  }
}
