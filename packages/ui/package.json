{
  "name": "@unisane/ui",
  "version": "0.4.0",
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./styles.css": "./dist/index.css",
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js"
    },
    "./primitives/*": {
      "types": "./dist/primitives/*.d.ts",
      "import": "./dist/primitives/*.js"
    },
    "./layout/*": {
      "types": "./dist/layout/*.d.ts",
      "import": "./dist/layout/*.js"
    },
    "./hooks/*": {
      "types": "./dist/hooks/*.d.ts",
      "import": "./dist/hooks/*.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm build:registry && pnpm build:components && pnpm build:styles",
    "build:registry": "node scripts/build-registry.mjs",
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "build:components": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint src --max-warnings 0",
    "validate:registry": "node scripts/validate-registry.mjs"
  },
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@unisane/eslint-config": "workspace:*",
    "@unisane/tailwind-config": "workspace:*",
    "@unisane/tokens": "workspace:*",
    "@unisane/typescript-config": "workspace:*",
    "eslint": "^9.39.1",
    "tailwindcss": "^4.1.16",
    "tsc-alias": "^1.8.10",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  }
}
