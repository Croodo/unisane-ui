{
  "name": "@unisane/devtools",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Unified CLI for Unisane development and distribution",
  "bin": {
    "unisane": "./dist/cli.js",
    "unisane-devtools": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts src/cli.ts --format esm --dts --watch",
    "lint": "eslint src --max-warnings 0",
    "test": "vitest run",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@unisane/cli-core": "workspace:*",
    "chokidar": "^3.6.0",
    "commander": "^11.0.0",
    "diff": "^5.2.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.0",
    "ts-morph": "^23.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/diff": "^5.2.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.0.0",
    "@types/prompts": "^2.4.9",
    "@unisane/typescript-config": "workspace:*",
    "eslint": "^9.39.1",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@unisane/kernel": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@unisane/kernel": {
      "optional": true
    }
  }
}
