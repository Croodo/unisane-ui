{
  "name": "@unisane/cli-core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Shared CLI infrastructure for Unisane developer tools",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./logger": {
      "types": "./dist/logger.d.ts",
      "import": "./dist/logger.js"
    },
    "./errors": {
      "types": "./dist/errors.d.ts",
      "import": "./dist/errors.js"
    },
    "./prompts": {
      "types": "./dist/prompts.d.ts",
      "import": "./dist/prompts.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/logger.ts src/errors.ts src/prompts.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts src/logger.ts src/errors.ts src/prompts.ts --format esm --dts --watch",
    "lint": "eslint src --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2"
  }
}
