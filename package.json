{
  "name": "unisane",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:saaskit": "turbo run dev --filter=@unisane/saaskit",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "check-types": "turbo run check-types",
    "typecheck": "turbo run check-types",
    "test": "pnpm -r run test:run",
    "test:run": "pnpm -r run test:run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf node_modules/.cache",
    "reset": "pnpm clean && rm -rf node_modules && pnpm install",
    "gen:routes": "turbo run gen:routes",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "build:starter": "pnpm --filter @unisane/cli-core build && pnpm --filter @unisane/devtools build && node packages/tooling/devtools/dist/cli.js release build",
    "build:starter:oss": "pnpm --filter @unisane/cli-core build && pnpm --filter @unisane/devtools build && node packages/tooling/devtools/dist/cli.js release build --oss",
    "verify:build": "node packages/tooling/devtools/dist/cli.js release verify",
    "unisane": "node packages/tooling/devtools/dist/cli.js",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "pnpm build && pnpm changeset:publish",
    "version:check": "node scripts/sync-versions.mjs --check",
    "version:fix": "node scripts/sync-versions.mjs --fix"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^22.14.1",
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.6.3",
    "typescript": "^5.9.2",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.26.0+sha256.f60974c68cfe0a13f951fba0199669588577f0e3f0c9b7d1a7ca47633bf72386",
  "engines": {
    "node": ">=18"
  }
}
